{
  "extends": "airbnb",
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "jsx": true,
    "modules": true,
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true,
  },
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": [0, { "varsIgnorePattern": "h" }],
    "no-return-assign": 1,
    "spaced-comment": 0,
    "no-console": 0,
    "quotes": [2, "single"],
    "react/prefer-es6-class": 0,
    "react/jsx-curly-spacing": [2, "always"],
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-unused-expressions": [2, { "allowShortCircuit": true }]
  },
}
